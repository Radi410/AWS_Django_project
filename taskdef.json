{
  "family": "djangodev-task",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::022673484057:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "web",
      "image": "022673484057.dkr.ecr.eu-north-1.amazonaws.com/djangodev:latest",
      "essential": true,
      "portMappings": [
        { "containerPort": 8000, "hostPort": 8000, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "DJANGO_ALLOWED_HOSTS", "value": "*" },
        { "name": "DJANGO_DEBUG", "value": "0" },
        { "name": "DJANGO_SECRET_KEY", "value": "change-me-later" }
      ]
    }
  ]
}
